@model MvcStok.Models.Entity.Satislar
@{
    ViewBag.Title = "Satışlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satışlar Sayfası</h2>

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">

    Satış Yap

</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Satış Yapma Ekranı</h2>
            </div>
            <form method="post" action="/Satis/SatisYap" class="form-group-lg">
                <div class="modal-body">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(m => m.Urunİd, new { @class = "form-control" })
                    <br />
                    <label>Müşteri Adı Soyadı</label>
                    @Html.TextBoxFor(m => m.Musteriİd, new { @class = "form-control" })
                    <br />
                    <label>Adet</label>
                    @Html.TextBoxFor(m => m.Adet, new { @class = "form-control" })
                    <br />
                    <label>Fiyat</label>
                    @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-success" style="margin-right:135px">Kaydet</button>
                    <button class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>